syntax = "proto3";

message ConsensusMessagePayload {
  // period of consensus loop
  uint64 period = 1;
  
  // header_signature of block that was proposal
  string proposal_id = 2;
  
  // address of node that propose this header_signature
  string voter_id = 3;
}

message ConsensusMessage {
// All kind of consensus message
  enum Type {
      VALUE_PROPOSAL = 0;
      SOFT_VOTES = 1;
      CERT_VOTES = 2;
      NEXT_VOTES = 3;
  }
  
  // type of consensus message
  Type type = 1;
  
  // payload of message
  MessagePayload payload = 0;
}
